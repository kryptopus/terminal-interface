{
    "name": "kryptopus-terminal-interface",
    "description": "Terminal interface for Kryptopus",
    "version": "1.0.0",
    "author": "neolao <contact@neolao.com>",
    "repository": "https://github.com/kryptopus/terminal-interface.git",
    "license": "MIT",
    "files": [
        "src",
        "lib"
    ],
    "main": "lib/Bundle.js",
    "engines": {
        "node": ">= 9"
    },
    "dependencies": {
        "blessed": "^0.1.81",
        "blessed-contrib": "^4.8.5",
        "colors": "^1.1.2",
        "decko": "^1.2.0",
        "react": "^16.2.0",
        "react-blessed": "^0.2.1",
        "react-blessed-contrib": "^0.2.0",
        "react-redux": "^5.0.6",
        "redux": "^3.7.2"
    },
    "devDependencies": {
        "babel-cli": "^6.7",
        "babel-preset-react": "^6.24.1",
        "babel-preset-solfege": "^1.1.2",
        "eslint": "^3.19",
        "eslint-plugin-solfege": "^1.0",
        "flow-bin": "^0.60.1",
        "solfegejs-application": "^3.0.1",
        "solfegejs-cli": "^4.0.2",
        "solfegejs-dependency-injection": "^2.2.5",
        "watch": "^1.0.2"
    },
    "scripts": {
        "flow-stop": "flow stop",
        "flow-start": "flow start",
        "flow-restart": "flow stop && flow start",
        "lint": "eslint --ext .js src",
        "prepare": "npm run lint && npm run build",
        "prebuild": "npm run lint && npm run flow-restart && flow",
        "postbuild": "echo \"----- READY -----\"",
        "build": "babel --out-dir lib src --copy-files",
        "watch": "watch 'echo \"----- START BUILDING -----\"; npm run build --silent' ./src"
    },
    "babel": {
        "presets": [
            "solfege",
            "react"
        ],
        "comments": false
    },
    "eslintConfig": {
        "extends": [
            "eslint:recommended",
            "plugin:solfege/recommended"
        ],
        "rules": {
            "no-unused-vars": "off"
        }
    }
}
